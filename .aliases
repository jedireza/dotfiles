#detect which `ls` flavor is in use
if ls --color > /dev/null 2>&1; then # GNU `ls`
  colorflag="--color"
else # OS X `ls`
  colorflag="-G"
fi

#default ls settings
alias ls='ls -A ${colorflag}'
export LS_COLORS='no=00:fi=00:di=01;34:ln=01;36:pi=40;33:so=01;35:do=01;35:bd=40;33;01:cd=40;33;01:or=40;31;01:ex=01;32:*.tar=01;31:*.tgz=01;31:*.arj=01;31:*.taz=01;31:*.lzh=01;31:*.zip=01;31:*.z=01;31:*.Z=01;31:*.gz=01;31:*.bz2=01;31:*.deb=01;31:*.rpm=01;31:*.jar=01;31:*.jpg=01;35:*.jpeg=01;35:*.gif=01;35:*.bmp=01;35:*.pbm=01;35:*.pgm=01;35:*.ppm=01;35:*.tga=01;35:*.xbm=01;35:*.xpm=01;35:*.tif=01;35:*.tiff=01;35:*.png=01;35:*.mov=01;35:*.mpg=01;35:*.mpeg=01;35:*.avi=01;35:*.fli=01;35:*.gl=01;35:*.dl=01;35:*.xcf=01;35:*.xwd=01;35:*.ogg=01;35:*.mp3=01;35:*.wav=01;35:'

#easier nav
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

#local npm bin
alias npm-bin='PATH=$(npm bin):$PATH'

#docker alias: fxos
fxos="docker run -it --rm"
fxos="$fxos -v ~/projects/B2G:/B2G"
fxos="$fxos -v ~/projects/gaia:/gaia"
fxos="$fxos -v ~/projects/mozilla-central:/mozilla-central"
fxos="$fxos -v /dev/bus/usb:/dev/bus/usb"
fxos="$fxos -v ~/.ssh:/home/root/.ssh"
fxos="$fxos -v /tmp/.X11-unix:/tmp/.X11-unix"
fxos="$fxos -e DISPLAY=$DISPLAY -e UID=$UID -e GID=$GID"
fxos="$fxos --net=host"
fxos="$fxos jedireza/fxos"
alias dockerme-fxos="$fxos"
alias dockerme-fxos-xhost="xhost + && $fxos && xhost -"

#docker alias: mongodb
alias dockerme-mongo-server='docker run --name mongodb -it --rm -v ~/data/mongodb:/data/db -p 27017:27017 mongo'
alias dockerme-mongo-client="docker run -it --link mongodb:mongo --rm mongo sh -c 'exec mongo \"\$MONGO_PORT_27017_TCP_ADDR:\$MONGO_PORT_27017_TCP_PORT\"'"

#docker alias: postgres
alias dockerme-postgres-server='docker run --name pg -it --rm -v ~/data/postgres:/var/lib/postgresql/data -p 5432:5432 -e POSTGRES_PASSWORD=mysecretpassword postgres'
alias dockerme-postgres-client="docker run -it --link pg:postgres --rm postgres sh -c 'exec psql -h \"\$POSTGRES_PORT_5432_TCP_ADDR\" -p \"\$POSTGRES_PORT_5432_TCP_PORT\" -U postgres'"

#docker alias: myos
alias dockerme-myos-xhost='xhost + && docker run -it --rm -v ~/projects/myos/os/:/os/ -v /tmp/.X11-unix:/tmp/.X11-unix -e DISPLAY=$DISPLAY jedireza/myos'

#arch updates
alias sysupdate='sudo pacman -Syu'
alias aurupdate='yaourt -Sbu --aur'

#new tmux session named as the current directory
alias tmuxme='tmux new -s $(echo ${PWD##*/} | sed "s/[_\.]/-/g")'

#xdg-open => open
alias open='xdg-open'
